<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_1"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/sub_actionbar" />

    <ImageView
        style="@style/WithDrawCommonMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="54dp"

        android:src="@drawable/ic_withdraw_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:text="Permohonan Penarikan Berhasil" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:text="Permohonan penarikan Anda telah diterima, jumlah yang ditarik dalam waktu 1-5 hari kerja masuk dalam rekening bank Anda, mohon sabar menungguâ€¦
" />

    <TextView
        android:id="@+id/tv_withdraw_result_ok"
        style="@style/Clickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="@drawable/selector_theme_button"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:text="Kembali ke Beranda"
        android:textColor="@color/text_white"
        android:textSize="16sp" />

</LinearLayout>
