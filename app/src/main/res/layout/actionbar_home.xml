<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ActionBarDefault"
    android:orientation="horizontal"
    android:id="@+id/actionbar_home"
    >

    <ImageButton
        android:id="@+id/ib_actionbar_home_user"
        style="@style/ActionBarImageButton"
        android:paddingRight="10dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_avatar_actionbar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_actionbar_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingLeft="7dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:drawableLeft="@drawable/ic_search"
                android:background="@drawable/shape_main_actionbar_search_bg"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
