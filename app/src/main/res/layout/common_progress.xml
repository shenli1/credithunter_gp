<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:freso="http://schemas.android.com/apk/res-auto"
    android:id="@+id/common_progress_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!--additional bottom padding make the gif look 'more center'-->
    <LinearLayout
        style="@style/WrapWrap.Horizontal"
        android:layout_centerInParent="true"
        android:padding="17dp"
        android:background="@drawable/shape_loading_bg"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical"
        >
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginRight="17dp"
            android:src="@drawable/progress_center"
            />
        <TextView
            android:id="@+id/tv_loading_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_loading_message"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            />

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_loading_message"
            android:textSize="12sp"
            android:textColor="@color/hint_red"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>
