<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/horizontal_padding"
    android:paddingRight="@dimen/horizontal_padding">

    <!--top: image & title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_step_audit_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="18dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_step_audit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_theme_title"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout style="@style/MatchWrap.Horizontal">
        <com.id.cash.widget.DashedLineView
            android:id="@+id/dash_step"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_step_audit_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@color/white_bg"
            android:paddingLeft="28dp"
            android:paddingRight="34dp"
            android:text=""
            android:textColor="@color/dark_text4"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
